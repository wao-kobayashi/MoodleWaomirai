          input#passwordInput(type="password", placeholder="パスワードを入力してください", required)
          .error-label(style='display:none;')
            |パスワードが違います
          button(type="submit") ログイン

    script.
        $(document).ready(function() {
            var cookieName = 'visited';
            var sessionKey = 'sessionVisited';
            if ($.cookie(cookieName)) {
                $("#passwordInput").val("mirai");
            }
            // 初回訪問か再訪問かをチェック
            $("#passwordForm").on("submit", function(event) {
                event.preventDefault();
                const correctPassword = "mirai"; // 正しいパスワードを設定
                const enteredPassword = $("#passwordInput").val();

                if (enteredPassword === correctPassword) {
                    // クッキーが存在するかどうかを確認
                    if ($.cookie(cookieName)) {
                        // 再訪問時：Bのページにリダイレクト
                        //- window.location.href = "/english-portal.html"; // 再訪問時のリダイレクト先
                        window.location.href = "/english-portal-tutorial.html"; // 初回訪問時のリダイレクト先
                    } else {
                        // 初回訪問時：Aのページにリダイレクト
                        window.location.href = "/english-portal-tutorial.html"; // 初回訪問時のリダイレクト先

                        // 初回訪問後、セッションストレージとクッキーに記録
                        sessionStorage.setItem(sessionKey, 'true');
                        $.cookie(cookieName, 'true', { expires: 7 }); // クッキーの有効期限を7日に設定
                    }
                } else {
                  $("#passwordInput").addClass("error");
                  $(".error-label").show();
                  

                }
            });
        });
