// 月別スケジュールの共通ミックスイン
mixin schedule-month(title, showResource)
  //- mixin に渡すフラグを設定
  - var showResource = true
  li#section-0.subject-page-added.section.course-section.main.clearfix
    .course-section-header.d-flex(
      data-number="0" 
      data-id="766" 
      data-for="section_title"
      )
      .bulkselect.align-self-center.d-none(data-for="sectionBulkSelect")
        input#sectionCheckbox766(
          data-bulkcheckbox="1" 
          data-action="toggleSelectionSection" 
          data-id="766" 
          type="checkbox"
          )
        label.sr-only(for="sectionCheckbox766") #{title}
      .d-flex.align-items-start.position-relative
        a#collapssesection0.btn.btn-icon.mr-1.icons-collapse-expand.justify-content-center.stretched-link(
